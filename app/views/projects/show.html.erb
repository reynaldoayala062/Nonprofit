<%= stylesheet_link_tag 'user.css' %>
<h1> Project Info </h1>
<br>
<%= button_to "View All Project", projects_path, :method => :get %>
<br>
<h2> Nonprofit Name: <%= @project.nonprofit.name %> </h2>
<h3> Project Name: <%= @project.name %> </h3>
<br>
<% @project.programmers.each do |p| %>
    <h3> Programmer Name: <%= p.name %> </h3>
<% end %>
<br>
<ul>
<% @project.categories.each do |p| %>
    <li><h3> Project Type: <%= p.name %></h3></li><br>
    <ol> Category Kind : <%= p.kind %></ol><br>
    <ol> Description: <%= p.description %></ol><br>
    <br>
<% end %>
</ul>
<br>
<br>



