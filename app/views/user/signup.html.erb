<%= stylesheet_link_tag 'user.css' %>
<h1> Create a user </h1>

<h2> Sign in below to see a list of programmers and non-profits on our system, and to see available projects </h2>

<%= form_for(@user, url: signup_path) do |f| %>
    
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.uniq.count, "error") %>
      prohibited this user from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.uniq.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<h3>
    <%= f.label :username %><br>
    <%= f.text_field :username, placeholder: "Enter Username" %>
    <br>
    <%= f.label :password %><br>
    <%= f.text_field :password, placeholder: "Enter Password"%>
    <br>
    
    <%= f.submit %>
</h3>
<% end %>

<br>
<%= button_to "Home Page", root_path, :method => :get %>
<br>
<br>
<%= button_to "Log In", login_path, :method => :get %>