<%= stylesheet_link_tag 'user.css' %>
<h1> Programmers Info </h1>
<br>
<h2> Name: <%= @programmer.name %> </h2>
<h3> Email: <%= @programmer.email %> </h3>
<h3> Phone: <%= @programmer.phone %> </h3>
<br>
<h2> All Projects that <%= @programmer.name %> has </h2>
<% @programmer.projects.each do |p| %>
    <h3> Project Name: <%= p.name %> </h3>
<% end %>
<br>
<%= button_to "Edit Programmers Info", { :action => "edit"}, :method => :get %>
<br>
<%= button_to "Delete", { :action => "destroy"}, :method => :delete %>
<br>
<%= button_to "View All Programmers", { :action => "index"}, :method => :get %>


